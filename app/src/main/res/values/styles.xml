<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/accent</item>
        <item name="colorControlHighlight">@color/accent_dark</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorControlHighlight">@color/iron</item>
    </style>

    <style name="JudulBesar" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/euclid_circular_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">42sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Judul" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/euclid_circular_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">33sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="subJudul" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/euclid_circular_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="subJudul2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/euclid_circular_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="teksbody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/euclid_circular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

</resources>
